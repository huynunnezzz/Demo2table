<%- include('../layout/head.ejs',{title:"Dashboard"}) %>
<%- include('../layout/header.ejs') %>
<%- include('../layout/sidebar.ejs') %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li><a href="/admin/users">Quản lý thành viên</a></li>
            <li class="active">Thêm thành viên</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm thành viên</h1>
        </div>
    </div><!--/.row-->
    <% if(data && data.error){ %>
        <div class="alert alert-danger"><%= data.error %></div>
    <% } %>
    <% if(data.checkadd==true){ %>
        <div class="alert alert-success"><%= data.success %></div>
    <% } %>
    <form role="form" method="post">
        <fieldset>
            <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="email" type="email"
                    autofocus="" />
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Password" name="password"
                    type="password" value="" />
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Repassword" name="repassword"
                    type="password" value="" />
            </div>
            <div class="form-group">
                <select name="role" id="" class="form-control">
                    <option selected> Nam</option>
                    <option> Nữ</option>
               </select>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Full_name" name="full_name"
                    type="text" value="" />
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a name="" id="" class="btn btn-primary" href="/admin/users" role="button">Quay lại</a>
        </fieldset>
    </form>

</div>


<%- include('../layout/footer.ejs') %>